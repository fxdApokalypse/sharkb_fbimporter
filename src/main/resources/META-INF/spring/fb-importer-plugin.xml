<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="net.sharkfw.apps.fb.importers"/>

    <bean id="importerContext" class="net.sharkfw.apps.fb.core.importer.ImporterContext" scope="singleton"></bean>

    <bean id="fbServiceProvider" class="net.sharkfw.apps.fb.core.service.FacebookAccessTokenServiceProvider">
        <constructor-arg name="accessToken" value=""></constructor-arg>
        <constructor-arg name="appNamespace" value="SharkFBImporter"></constructor-arg>
    </bean>

    <bean id="sharkKB" class="net.sharkfw.knowledgeBase.filesystem.FSSharkKB">
        <constructor-arg name="rootFolder" value="fbSharkKB/"></constructor-arg>
    </bean>

</beans>