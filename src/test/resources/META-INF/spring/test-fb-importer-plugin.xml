<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <import resource="fb-importer-plugin.xml"></import>

    <bean id="fbServiceProvider" class="net.sharkfw.apps.fb.core.service.FacebookAccessTokenServiceProvider">
        <constructor-arg name="accessToken" value="SomeAccessToken"></constructor-arg>
        <constructor-arg name="appNamespace" value="SharkFBImporter"></constructor-arg>
    </bean>

    <bean id="sharkKB" class="net.sharkfw.knowledgeBase.inmemory.InMemoSharkKB"></bean>

</beans>